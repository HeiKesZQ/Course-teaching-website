@model IEnumerable<xxx课程教学网站.Models.T_ArrangeCourse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>排课管理</h2>

<p>
    @Html.ActionLink("点击新增排课信息", "Create", "", new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm("Index", "ArrangeCourse", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <label>学期：</label>
                <input type="text" name="term" />
            </div>
            <div class="col-md-3">
                <label>班级：</label>
                <input type="text" name="class_name" />
            </div>
            <div class="col-md-3">
                <label>工号：</label>
                <input type="text" name="work_id" />
            </div>
            <div class="col-md-3">
                <input type="submit" value="查询"  class="btn btn-primary"/>
            </div>

        </div>

    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.term)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.work_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.work_id)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("删除", "Delete", new { id = item.id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
