@model IEnumerable<xxx课程教学网站.Models.T_Answer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Student/Views/Shared/Student_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-default col-md-10 col-md-offset-1">
        <div class="panel-heading">
            <h1 class="panel-title" style="height:25px;text-align:center;font-size: 20px; "> @ViewBag.Question.Headline</h1>
        </div>
        <div class="panel-body">
            <div class="quesdl">
                <div class="quesdt" id="questd1" style="font-size: 17px;font-weight: 500;">
                    @ViewBag.Question.Q_Content
                </div>
                <div>
                    <div style="width:50%;padding:0;margin:0;float:left;text-align: left">
                        <a id="quesPeople" class="btn btn-default disabled" role="button" style="font-size:17px;width: 300px;">提问者： @ViewBag.Question.Uploader); <span>  "@ViewBag.Question.Up_Time)</span></a>
                    </div>
                    <div style="width:50%;padding:0;margin:0;float:left;text-align: right">
                        <form action="@Url.Action("Index", "Answer")" method="post">
                            <input type="text" value="@ViewBag.Question.id" name="Q_id" style="visibility:hidden" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@foreach (var item in Model)
{
    <div class="row">
        <div class="panel panel-default col-md-10 col-md-offset-1">
            <div class="panel-heading ">
                <h1 class=" " accesskey="" style="height:25px;text-align:left;font-size: 20px;"><span style="color:deepskyblue"> @Html.DisplayFor(modelItem => item.Uploader)：</span></h1>
            </div>
            <div class="panel-body">
                <div class="quesdl">
                    <div class="quesdt" id="questd1" style="font-size: 17px;font-weight: 500;">
                        @Html.DisplayFor(modelItem => item.A_Content)
                    </div>
                    <div>
                        <div style="width:100%;padding:0;margin:0;float:left;text-align: right">
                            <span>---- @Html.DisplayFor(modelItem => item.Up_Time)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<span>发表评论：</span>
<div>
    <form action="@Url.Action("Create", "Answer")" method="post">
        <input type="text" value="@ViewBag.Current_Q_id" name="Q_id" style="visibility:hidden" />

        <textarea name="A_Content" style="width:50%; height:313px; float:left; margin-left:80px;"></textarea>
        <input type="submit" value="发表" class="btn btn-primary" style="float:left;" />
    </form>
</div>
