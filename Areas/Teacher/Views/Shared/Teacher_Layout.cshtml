<!DOCTYPE html>
<!-- saved from url=(0043)# -->
<html lang="zh-CN">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/Imgs/bilibili.png">

    <title>教师端</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")


    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">


    <!-- Custom styles for this template -->
    <link href="~/Content/dashboard.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet">

</head>

<body>


    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">教师端</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li><a href="@Url.Action("EditTeacher", "CourseResource", new { id = @Session["login_teacher_workid"], area="Teacher"})"><span class="glyphicon glyphicon-user" style="margin-right:10px;"> </span>个人信息</a></li>
                    <li><a href="@Url.Action("TeacherLogin", "Home", new {  area=""})"><span class="glyphicon glyphicon-home" style="margin-right:10px;"> </span>注销登录</a></li>

                </ul>

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li>@Html.ActionLink("通知", "Index", "Notice")</li>
                    <li>@Html.ActionLink("问答", "Index", "Question")</li>
                    <li>@Html.ActionLink("查询所有", "Index", "CourseResource", new { area="Teacher" }, new { })</li>
                    <li>@Html.ActionLink("授课计划上传", "Create", "CourseResource", new { file_type = "teachingplan" }, new { })</li>
                    <li>@Html.ActionLink("PPT上传", "Create", "CourseResource", new { file_type = "ppt" }, new { })</li>
                    <li>@Html.ActionLink("视频上传", "Create", "CourseResource", new { file_type = "video" }, new { })</li>
                    <li>@Html.ActionLink("作业上传", "Create", "CourseResource", new { file_type = "task" }, new { })</li>
                    <li>@Html.ActionLink("习题上传", "Create", "CourseResource", new { file_type = "exercises" }, new { })</li>
                    <li>@Html.ActionLink("实验上传", "Create", "CourseResource", new { file_type = "experiment" }, new { })</li>
                    <li>@Html.ActionLink("重点难点上传", "Create", "CourseResource", new { file_type = "keypoint" }, new { })</li>
                    <li>@Html.ActionLink("自测习题上传", "Create", "CourseResource", new { file_type = "selftest" }, new { })</li>


                    <li>@Html.ActionLink("学生信息导入", "Import", "T_Student", new { file_type = "stu_excel" }, new { })</li>





                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        $(".sidebar a").each(function () {
            if (location.href == this.href ) {
                $(this).parent().addClass('active')
            }
        })
    </script>






    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="~/Scripts/holder.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>



